# Database settings
DATABASE_URI=mongodb://localhost:27017
DATABASE_NAME=auto_author_test

# CORS Settings
# Can be a comma-separated string or JSON array
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# OpenAI API key (Required)
# Get from: https://platform.openai.com/api-keys
OPENAI_AUTOAUTHOR_API_KEY=sk-your-openai-api-key-here

# Clerk Authentication (Required)
# Get from: https://dashboard.clerk.com
CLERK_API_KEY=sk_test_your_clerk_api_key_here
CLERK_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour-Clerk-JWT-Public-Key-Here\n-----END PUBLIC KEY-----"
CLERK_FRONTEND_API=your-app.clerk.accounts.dev
CLERK_BACKEND_API=api.clerk.com
CLERK_JWT_ALGORITHM=RS256
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
CLERK_SECRET_KEY=sk_your_clerk_secret_key_here

# API Settings
API_V1_PREFIX=/api/v1

# AWS Settings (Optional - for transcription and S3 storage)
# Leave empty if not using AWS services (will fallback to local storage)
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary Settings (Optional - for image storage)
# Leave empty if not using Cloudinary (will fallback to local storage)
# Get from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
