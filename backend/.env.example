# Database settings
DATABASE_URI=mongodb://localhost:27017
DATABASE_NAME=auto_author_test

# CORS Settings
# Can be a comma-separated string or JSON array
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# OpenAI API key (Required)
# Get from: https://platform.openai.com/api-keys
OPENAI_AUTOAUTHOR_API_KEY=sk-your-openai-api-key-here

# Better Auth Configuration (Required)
# CRITICAL: BETTER_AUTH_SECRET is required and must be a strong random value
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# NEVER use default/weak values - application will reject them
# Minimum 32 characters, recommended 64+ for production
BETTER_AUTH_SECRET=your-secure-secret-key-here-replace-with-generated-value
# Base URL of the application (must match frontend URL)
BETTER_AUTH_URL=http://localhost:3000
# Issuer identifier for JWT tokens
BETTER_AUTH_ISSUER=better-auth

# API Settings
API_V1_PREFIX=/api/v1

# AWS Settings (Optional - for transcription and S3 storage)
# Leave empty if not using AWS services (will fallback to local storage)
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary Settings (Optional - for image storage)
# Leave empty if not using Cloudinary (will fallback to local storage)
# Get from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis Settings (Required for AI caching and improved performance)
# Install Redis locally: https://redis.io/docs/getting-started/
# Or run with Docker: docker run -d -p 6379:6379 redis:latest
# Leave empty to disable caching (will reduce performance but not break functionality)
REDIS_URL=redis://localhost:6379/0

# AI Service Caching Configuration
# Cache TTL (Time To Live) in seconds - how long to keep cached AI responses
# Default: 86400 seconds (24 hours)
AI_CACHE_TTL=86400

# Enable/disable AI response caching
# Set to 'false' to disable caching (useful for development/debugging)
# Default: true
AI_CACHE_ENABLED=true

# Maximum number of retry attempts for failed AI service calls
# The service uses exponential backoff between retries
# Default: 3
AI_MAX_RETRIES=3
