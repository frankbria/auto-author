            {...props}            className={cn(
              "group relative flex items-center gap-2 cursor-pointer transition-colors",
              orientation === 'horizontal' 
                ? "px-3 py-2 border-r min-w-0 max-w-[200px]"
                : "px-3 py-3 w-full min-h-[48px]",              isActive 
                ? orientation === 'horizontal'
