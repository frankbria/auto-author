        user_id=current_user.get("clerk_id"),
        book_id=book_id,
        chapter_id=chapter_id,
        access_type="view",
        metadata={"chapter_title": chapter.get("title")},
    )

    return {"book_id": book_id, "chapter": chapter, "success": True}


