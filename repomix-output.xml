      value: 1000 
    });
    Object.defineProperty(HTMLElement.prototype, 'clientHeight', { 
      configurable: true, 
      value: 500 
    });
    Object.defineProperty(HTMLElement.prototype, 'scrollTop', { 
      configurable: true, 
