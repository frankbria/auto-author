        this.onresult({
          resultIndex: 0,
          results: [
            [{ transcript: 'Voice summary test.' }],
          ],
        });
      }
      if (this.onend) this.onend();
    }, 600);
  });
  stop = jest.fn(() => {
    if (this.onend) this.onend();
  });
